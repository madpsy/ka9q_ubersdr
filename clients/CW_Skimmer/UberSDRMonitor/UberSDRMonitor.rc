    CONTROL         "", IDC_STATIC, "Static", SS_ETCHEDHORZ, 10, 310, 580, 1
    
    // Statistics
    LTEXT           "Statistics:", IDC_STATIC, 10, 315, 580, 10
    LTEXT           "Callbacks: 0", IDC_CALLBACKS, 10, 330, 580, 10
    LTEXT           "Uptime: 00:00:00", IDC_UPTIME, 10, 345, 580, 10

// UberSDRMonitor.rc - Resource script for dialog

#include <windows.h>
#include "resource.h"

// Dialog
IDD_MAIN DIALOGEX 0, 0, 600, 550
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "UberSDR Monitor"
FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
    // Instance list area
    LTEXT           "Available Instances:", IDC_INSTANCE_LABEL, 10, 10, 200, 10
    LISTBOX         IDC_INSTANCE_LIST, 10, 25, 580, 80, LBS_NOTIFY | LBS_NOINTEGRALHEIGHT | WS_VSCROLL | WS_TABSTOP
    PUSHBUTTON      "Connect to Selected", IDC_CONNECT_BUTTON, 500, 110, 90, 14
    
    // Separator after instance list
    CONTROL         "", IDC_STATIC, "Static", SS_ETCHEDHORZ, 10, 130, 580, 1
    
    // Server status (moved down to make room for instance list)
    LTEXT           "Server: Connecting...", IDC_SERVER_STATUS, 10, 140, 580, 10
    LTEXT           "Sample Rate: -- Hz", IDC_SAMPLE_RATE, 10, 155, 580, 10
    
    // Separator
    CONTROL         "", IDC_STATIC, "Static", SS_ETCHEDHORZ, 10, 170, 580, 1
    
    // Receiver status header (moved down)
    LTEXT           "Receiver Status:", IDC_STATIC, 10, 175, 200, 10
    LTEXT           "Spots", IDC_STATIC, 343, 175, 22, 10, SS_RIGHT
    LTEXT           "Median", IDC_STATIC, 368, 175, 50, 10, SS_CENTER
    LTEXT           "Duration", IDC_STATIC, 470, 175, 40, 10, SS_CENTER
    LTEXT           "I", IDC_STATIC, 520, 175, 10, 10
    LTEXT           "Q", IDC_STATIC, 547, 175, 10, 10
    
    // Receiver status lines with Spot counts, Spec and Rec buttons, Auto checkboxes and level meters
    LTEXT           "Rx0: Inactive", IDC_RX0_STATUS, 10, 190, 330, 10
    LTEXT           "-", IDC_RX0_SPOTS, 343, 190, 22, 10, SS_RIGHT
    LTEXT           "-", IDC_RX0_MEDIAN, 368, 190, 50, 10, SS_CENTER
    PUSHBUTTON      "Spec", IDC_RX0_SPECTRUM, 420, 189, 25, 12
    PUSHBUTTON      "Rec", IDC_RX0_RECORD, 447, 189, 20, 12
    EDITTEXT        IDC_RX0_DURATION, 470, 189, 40, 12, ES_NUMBER
    CONTROL         "", IDC_RX0_LEVEL_I, "msctls_progress32", PBS_SMOOTH | WS_BORDER, 515, 190, 25, 10
    CONTROL         "", IDC_RX0_LEVEL_Q, "msctls_progress32", PBS_SMOOTH | WS_BORDER, 542, 190, 25, 10
    
